@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1>Admin Roles</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/role/create">Add Role</a>
        <hr />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td>Name</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/role/edit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>


                                <form action="/role/remove" method="post" style="display:inline;">
                                    <input type="hidden" name="CategoryId" value="" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <partial name="_noproduct" />
                }


            </tbody>
        </table>
    </div>
</div>